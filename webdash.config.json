{
    "commands": [
        {
            "name": "clean",
            "action": "rm build/report-repo-state",
            "wdir": "$.thisDir()"
        },
        {
            "name": "build",
            "actions": [
                "eval 'mkdir build'",
                "cmake -B./build -H./ -S./",
                "make -C build"
            ],
            "dependencies": [
                "./src/lib/webdash-executer/webdash.config.json:build"
            ],
            "wdir": "$.thisDir()"
        },
        {
            "name": "install",
            "action": "bash install.sh",
            "wdir": "$.thisDir()"
        },
        {
            "name": "all",
            "actions": [
                ":clean", ":build", ":install"
            ],
            "wdir": "$.thisDir()"
        },
        {
            "name": "git-status",
            "actions": [
                "git status"
            ]
        },
        {
            "name": "report-repo-state",
            "actions": [
                "report-repo-state git-status"
            ],
            "frequency": "daily",
            "when": "new-day",
            "notify-dashboard": true,
            "wdir": "$.thisDir()"
        }
    ]
}